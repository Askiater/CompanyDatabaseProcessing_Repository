@model CompanyDatabaseProcessing.Models.PersonView

@{
    ViewBag.Title = "DeleteItemForm";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Удалить запись</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>
        .btn a {
            color: white;
            text-decoration: none;
        }

        body {
            background-color: white;
        }
    </style>
</head>
<body>
    <div class="panel-danger">
        <div class="panel-heading text-center">
            <h4>Введите удаляемого сотрудника: </h4>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                <div class="container">
                    <div class="row">
                        <div class="form-group col-lg-offset-3 col-lg-6">
                            <label>Имя:</label>
                            @Html.TextBoxFor(x => x.first_name, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-offset-3 col-lg-6">
                            <label>Фамилия:</label>
                            @Html.TextBoxFor(x => x.second_name, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-offset-3 col-lg-6">
                            <label>Отчество:</label>
                            @Html.TextBoxFor(x => x.last_name, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-offset-3 col-lg-6">
                            <label>Отдел:</label>
                            @Html.TextBoxFor(x => x.dep, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-offset-3 col-lg-6">
                            <label>Пост:</label>
                            @Html.TextBoxFor(x => x.post, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-offset-3 col-lg-6">
                            <div class="text-center">
                                <input type="submit" value="Удалить запись" class="btn btn-danger btn-lg" />
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>